@using MyEveryNoteProject.Entities.Messages
@using MyEveryNoteProject.WebApp.ViewModels
@model ErrorViewModel

@{
    ViewBag.Title = Model.title;
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/Fontawesome/css/all.css" rel="stylesheet" />
    <script src="~/Content/Fontawesome/js/all.js"></script>
</head>
<body style="background-image:url(/images/art.jpg)">
    <div class="container" style="margin-top:20%;">
        <div class="card text-center">
            <div class="card-header" style="background-color:salmon;">
                <b style="color:dimgrey;">@Model.Header</b>
            </div>
            <div class="card-body" style="background-color:palegoldenrod;">
                <h5 class="card-title" style="color:red;"><i class="fas fa-times"></i> @Model.title</h5>
                @foreach (ErrorMessageObject msg in Model.Items)
                {
                    <p class="card-text" style="color:darkorange;"><b><i class="far fa-times-circle"></i> @msg.Message</b></p>  @* msg.Code ile mesajin kodunu da yakalayabilirsin.*@
                }
                <p class="btn btn-danger" style="color:antiquewhite;">@Model.RedirectionMessage</p>
            </div>
            <div class="card-footer text-muted" style="background-color:salmon;">

            </div>
        </div>
    </div>

    @{
        string js = string.Empty;

        if (Model.IsRedirecting == true)
        {
            js = " setTimeout(function () {window.location = '" + Model.RedirectingUrl + "';}, " + Model.RedirectingTimeout + ");";
        }
    }

    <script>
        $(function ()
        {
            @Html.Raw(js);
        });
    </script>

</body>
</html>
