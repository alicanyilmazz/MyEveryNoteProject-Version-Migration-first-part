@using MyEveryNoteProject.Entities
@using MyEveryNoteProject.WebApp.Models
@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UNWEAS</title>

    @*Theme CSS*@

    @Styles.Render("~/css/Layout")
    <link href="~/Content/Fontawesome/css/regular.min.css" rel="stylesheet" />
    <link href="~/Content/Fontawesome/css/solid.min.css" rel="stylesheet" />
    <link href="~/Content/Fontawesome/css/svg-with-js.min.css" rel="stylesheet" />
    <link href="~/Content/Fontawesome/css/v4-shims.min.css" rel="stylesheet" />
    <link href="~/Content/Fontawesome/css/brands.min.css" rel="stylesheet" />
    <script src="~/Content/Modals/CommentPage.js"></script>

</head>
<body onload="sample()">

    <div class="KW_progressContainer">
        <div class="KW_progressBar">
        </div>
    </div>
    <div class="page">
        <nav id="colorlib-main-nav" role="navigation">
            <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle active"><i></i></a>
            <div class="js-fullheight colorlib-table" style="background-image: url('../../images/child.jpg');">
                <div class="colorlib-table-cell js-fullheight">
                    <div class="row no-gutters">
                        <div class="col-md-12 text-center">
                            <h2 class="mb-4"><a href="Home/Index" class="logo" style="color:black;">MENU</a></h2>
                            <ul>
                                <li class="active"><a href="/Home/Index"><span style="font-size:x-large;">Home</span></a></li>
                                <li><a href="/Home/About"><span style="font-size:x-large;">About</span></a></li>
                                <li><a href="contact.html"><span style="font-size:x-large;">Management</span></a></li>
                                <li><a href="/Home/Contact"><span style="font-size:x-large;">Contact</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div id="colorlib-page">
            <header>
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="colorlib-navbar-brand">
                                <a class="colorlib-logo media" href="/Home/Index"><span class="logo-img media"></span><i class="media">UNWEAS</i></a>
                            </div>

                        </div>
                        @if (CurrentSession.User == null)
                        {

                            <div class="col-md-3">
                                <div class="colorlib-navbar-brand">
                                    <a style="font-size:smaller;" class="colorlib-logo media" href="/Home/SignIn"><span class="logo-img media"></span><i class="fas fa-user-plus media"></i> Sign In</a>
                                </div>

                            </div>
                            <div class="col-md-3">
                                <div class="colorlib-navbar-brand">
                                    <a style="font-size:smaller;" class="colorlib-logo media" href="/Home/SignUp"><span class="logo-img media"></span><i class="fas fa-user-check media"></i> Sign Up</a>
                                </div>

                            </div>
                        }
                        else
                        {
                            <div class="col-md-3">
                                <div class="colorlib-navbar-brand">
                                    <a style="font-size:smaller;" class="colorlib-logo media" href="/Home/ShowProfile"><span class="logo-img media" style="background-image: url('/images/userimg/@CurrentSession.User.ProfileImageFileName');"></span><i style="color:lightcoral;">@CurrentSession.User.Username</i></a>
                                </div>

                            </div>

                            <div class="col-md-4">
                                <div class="colorlib-navbar-brand">
                                    <a style="font-size:smaller;" class="colorlib-logo media" href="/Home/SignOut"><span class="logo-img media"></span><i class="fas fa-user-minus media"></i> Sign Out</a>
                                </div>

                            </div>


                        }
                        <div class="col-md-2"> <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle media"><i></i></a></div>
                    </div>
                </div>
            </header>

            @RenderBody()

            <footer class="ftco-footer ftco-bg-dark ftco-section">
                <div class="container">
                    <div class="row mb-5 justify-content-center">
                        <div class="col-md-5 text-center">
                            <div class="ftco-footer-widget mb-5">
                                <ul class="ftco-footer-social list-unstyled">
                                    <li class="ftco-animate"><a id="sclmd" style="padding:15px;" href="#"><i style="font-size:x-large;" class="fab fa-facebook-f"></i></a></li>
                                    <li class="ftco-animate"><a id="sclmd" style="padding:15px;" href="#"><i style="font-size:x-large;" class="fab fa-github"></i></a></li>
                                    <li class="ftco-animate"><a id="sclmd" style="padding:15px;" href="#"><i style="font-size:x-large;" class="fab fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                            <div class="ftco-footer-widget">
                                <h2 class="mb-3">Contact Us</h2>
                                <p class="h3 email"><a href="#">info@email.com</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <p>                               
                                Copyright &copy;  @(DateTime.Now.Year) All rights reserved | <span style="color:palegoldenrod;">Alican Yılmaz</span>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>

            <!-- loader -->
            <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


        </div>
    </div>

    @*Theme JS*@

  
    @Scripts.Render("~/js/Layout")

   
    @*Theme JS*@
</body>
</html>


@if (ViewBag.Status == true)
{
    @BootstrapHelper.toaster_process_message(true, ViewBag.StatusMessage)
}
else if (ViewBag.Status == false)
{
    @BootstrapHelper.toaster_process_message(false, ViewBag.StatusMessage)
}

<script>
    $(window).load(function () {
        $('a#pagnumlink').parent().removeClass("active");
        $("a[data-pagnum=1]").parent().addClass("active");
    });
</script>


