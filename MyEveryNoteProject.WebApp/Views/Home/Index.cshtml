                <div class="col-md-12 ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <p><a href="#" class="scroll">Last Categories</a></p>
                    <h1 class="mb-3" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Art</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="slider-item js-fullheight" style="background-image: url('../../images/history.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text align-items-center text-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-12 ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                    <p><a href="#" class="scroll">Top Categories</a></p>
                    <h1 class="mb-3" data-scrollax="properties: {translateY: '30%', opacity: 1.6}">History</h1>
                </div>
            </div>
