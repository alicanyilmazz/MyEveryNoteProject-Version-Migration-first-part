@using MyEveryNoteProject.Entities.ValueObjects
@model ContactFormViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container mt-5">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Contact Information</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3">
                <p><span>Address:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
            </div>
            <div class="col-md-3">
                <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Website:</span> <a href="#">yoursite.com</a></p>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-6 pr-md-5">
                @Html.ValidationSummary(true)
                @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group" style="display:none;" id="loadingpanel">
                        <div class="alert alert-warning" role="alert" style="border-radius:30px;">
                            Please wait your message sending...
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", type = "text", placeholder = "Your Name", id = "nametxt" })
                        <span class="focus-input100" data-placeholder="Name"></span>
                        <p>  @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</p>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "text", placeholder = "Your Email", id = "emailtxt" })
                        <span class="focus-input100" data-placeholder="Email"></span>
                        <p>  @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</p>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", type = "text", placeholder = "Subject", id = "subjecttxt" })
                        <span class="focus-input100" data-placeholder="Subject"></span>
                        <p>  @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })</p>
                    </div>
                    <div class="form-group">


                        @Html.TextAreaFor(model => model.Message, 7, 30, new { @class = "form-control ", placeholder = "Message", maxlength = 225, id = "messagetxt" })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <canvas width="150" height="50" id="captha"></canvas>
                        <input type="text" id="capthacontrol" class="form-control" placeholder="Captha" />
                    </div>
                    <div class="form-group">
                        <input id="contactformbtn" type="button" value="Send Message" class="btn btn-secondary py-3 px-5">
                    </div>

                  
                }
            </div>
            <div class="embed-responsive col-md-6" id="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6370.3278671062935!2d35.31608757773444!3d37.02973743469869!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x15288edba79f1905%3A0xfcb5876daedbb15!2s%C3%87ingene+Cafe!5e0!3m2!1str!2str!4v1553289666659" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>

