                @using (Html.BeginForm("RemoveProfileFeedBack", "Home", FormMethod.Post))
                {
                    @*post begin*@

                    <div class="tab-content tab-space">
                        <div class="tab-pane active text-center gallery" id="step1">
                            @*Step 1*@
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="text-warning">Why would you delete your account?</p>
                                    <div class="form-group was-validated">
                                        @*dropdown begin*@
                                        @Html.DropDownListFor(x => x.SelectedReasonId, Model.SL_DeletionReasons, "Plase make a choce!", new { @class = "custom-select ", @id = "dropDown" })
                                        @*dropdown end*@
                                        <div class="invalid-feedback">Example invalid custom select feedback</div>
                                        <div class="mb-3 drop-down-show-hide">
                                            <label for="validationTextarea" class="text-warning">Would you like to leave us a message?</label>
                                            @Html.TextAreaFor(x => x.message_validation, new { @class = "form-control is-invalid",@id= "validationTextarea", placeholder = "Required example textarea", maxlength = 120 })
                                            <div class="invalid-feedback">
                                                <p id="holedata"> Please enter at least <b id="charnumber"> 50 </b> charachter in the textarea.</p>
                                            </div>
                                        </div>
                                    </div>
                                    @*burasi*@
                                    <div class="profile-tabs">
                                        <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                                            <li class="nav-item mx" style="background-color:palegoldenrod">
                                                <a class="nav-link xxx next1 disabled mx" href="#step2" role="tab" data-toggle="tab">
                                                    <i class="fas fa-chevron-circle-right"></i> Next
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    @*burasi*@
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane text-center gallery" id="step2">
                            @*Step 2*@
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="was-validated">
                                        <div class="col-md-12 mb-3">
                                            <label for="validationServer01">Username</label>
                                            @*<input type="text" class="form-control is-valid cnt1" id="validationServer01" placeholder="username" value="" required name="username">*@
                                            @Html.EditorFor(x => x.username_validation, new { htmlAttributes = new { @class = "form-control is-valid cnt1", @id = "validationServer01", placeholder = "username" } })
                                            <div class="text-danger txt_1">Please enter your username!</div>
                                        </div>
                                        <div class="col-md-12 mb-3">
                                            <label for="validationServer01">Your password</label>
                                            @*<input type="password" class="form-control is-valid cnt2" id="validationServer01" placeholder="your password" value="" required name="password">*@
