                                            <div class="text-danger txt_2">Please enter your password!</div>
                                        </div>
                                    </div>
                                    @*burasi*@
                                    <div class="profile-tabs">
                                        <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                                            <li class="nav-item mx" style="background-color:palegoldenrod">
                                                <a class="nav-link xxx previous1 mx" href="#step1" role="tab" data-toggle="tab">
                                                    <i class="fas fa-chevron-circle-left"></i> Previous
                                                </a>
                                            </li>
                                            <li class="nav-item mx" style="background-color:palegoldenrod">
                                                <a class="nav-link xxx next2 disabled mx" href="#step3" role="tab" data-toggle="tab">
                                                     Next <i class="fas fa-chevron-circle-right"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    @*burasi*@
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane text-center gallery" id="step3">
                            @*Step 3*@
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-rose" style="border-radius:20%;" role="alert">
                                        <h4 class="alert-heading" style="color:orange;">We are so sorry! <i class="far fa-frown"></i></h4>
                                        <p style="color:palegoldenrod">Our aim as a community is that information can be accessed more quickly and easily.Please note that you can read articles without being a member.</p>
                                        <hr style="background-color:antiquewhite">
                                        <p class="mb-0" style="color:palegoldenrod;">We hope you will join us again soon.See you again.</p>
                                    </div>
                                    @*@Html.ActionLink("Delete Profile", "RemoveProfileFeedBack", "Home", null, new { @class = "btn btn-danger" })*@
                                    <button type="submit" class="btn btn-danger">Send</button>
                                    @*burasi*@
