                                                <a class="nav-link xxx previous2 mx" href="#step2" role="tab" data-toggle="tab">
                                                    <i class="fas fa-chevron-circle-left"></i> Previous
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    @*burasi*@
                                </div>
                            </div>
                        </div>
                    </div>

                    @*post end*@
                }
